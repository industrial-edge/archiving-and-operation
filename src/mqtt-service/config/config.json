{
    "uischema": {
        "type": "VerticalLayout",
        "elements": [
            {
                "type": "Group",
                "elements": [
                    {
                        "type": "HorizontalLayout",
                        "elements": [
                            {
                                "type": "Control",
                                "scope": "#/properties/MQTT/properties/HOST",
                                "label": "MQTT Broker IP"
                            },
                            {
                                "type": "Control",
                                "scope": "#/properties/MQTT/properties/PORT",
                                "label": "Port"
                            }
                        ]
                    },
                    {
                        "type": "Group",
                        "elements": [
                            {
                                "type": "HorizontalLayout",
                                "elements": [
                                    {
                                        "type": "Control",
                                        "scope": "#/properties/MQTT/properties/USERNAME",
                                        "label": "Username"
                                    },
                                    {
                                        "type": "Control",
                                        "scope": "#/properties/MQTT/properties/PASSWORD",
                                        "label": "Password"
                                    }
                                ]
                            }
                        ],
                        "label": "User"
                    }
                ],
                "label": "IE Databus"
            },
            {
                "type": "Group",
                "elements": [
                    {
                        "type": "Control",
                        "scope": "#/properties/MQTT/properties/DATA_SOURCE_NAME",
                        "label": "Data Source Name"
                    },
                    {
                        "type": "Group",
                        "elements": [
                            {
                                "type": "HorizontalLayout",
                                "elements": [
                                    {
                                        "type": "Control",
                                        "scope": "#/properties/MQTT/properties/TAG_NAME_START",
                                        "label": "Start"
                                    },
                                    {
                                        "type": "Control",
                                        "scope": "#/properties/MQTT/properties/TAG_NAME_STOP",
                                        "label": "Stop"
                                    },
                                    {
                                        "type": "Control",
                                        "scope": "#/properties/MQTT/properties/TAG_NAME_RESET",
                                        "label": "Reset"
                                    }
                                ]
                            }
                        ],
                        "label": "Tag Tames"
                    }
                ],
                "label": "S7 Connector"
            },
            {
                "type": "Group",
                "elements": [
                    {
                        "type": "HorizontalLayout",
                        "elements": [
                            {
                                "type": "Control",
                                "scope": "#/properties/INFLUXDB/properties/HOST",
                                "label": "InfluxDB IP"
                            },
                            {
                                "type": "Control",
                                "scope": "#/properties/INFLUXDB/properties/DATABASE",
                                "label": "Database Name"
                            }
                        ]
                    }
                ],
                "label": "InfluxDB"
            },
            {
                "type": "Group",
                "elements": [
                    {
                        "type": "HorizontalLayout",
                        "elements": [
                            {
                                "type": "Control",
                                "scope": "#/properties/API_SECURITY/properties/USERNAME",
                                "label": "Username"
                            },
                            {
                                "type": "Control",
                                "scope": "#/properties/API_SECURITY/properties/PASSWORD",
                                "label": "Password"
                            }
                        ]
                    }
                ],
                "label": "API"
            }
        ]
    },
    "dataschema": {
        "type": "object",
        "properties": {
            "API_SECURITY": {
                "type": "object",
                "required": [
                    "USERNAME",
                    "PASSWORD"
                ],
                "properties": {
                    "USERNAME": {
                        "type": "string",
                        "minLength": 4
                    },
                    "PASSWORD": {
                        "type": "string",
                        "minLength": 4
                    }
                }
            },
            "MQTT": {
                "type": "object",
                "default": {
                    "HOST": "ie-databus",
                    "PORT": "1883"
                },
                "required": [
                    "USERNAME",
                    "PASSWORD",
                    "DATA_SOURCE_NAME",
                    "TAG_NAME_START",
                    "TAG_NAME_STOP",
                    "TAG_NAME_RESET"
                ],
                "properties": {
                    "HOST": {
                        "type": "string"
                    },
                    "PORT": {
                        "type": "string"
                    },
                    "USERNAME": {
                        "type": "string",
                        "minLength": 4
                    },
                    "PASSWORD": {
                        "type": "string",
                        "minLength": 3
                    },
                    "DATA_SOURCE_NAME": {
                        "type": "string"
                    },
                    "TAG_NAME_START": {
                        "type": "string"
                    },
                    "TAG_NAME_STOP": {
                        "type": "string"
                    },
                    "TAG_NAME_RESET": {
                        "type": "string"
                    }
                }
            },
            "INFLUXDB": {
                "type": "object",
                "default": {
                    "HOST": "influxdb",
                    "DATABASE": "databus_values"
                },
                "properties": {
                    "HOST": {
                        "type": "string"
                    },
                    "DATABASE": {
                        "type": "string"
                    }
                }
            }
        }
    }
}